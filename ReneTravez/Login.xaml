<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReneTravez.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">              
                <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
            </Frame>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"></Entry>
            <Entry x:Name="txtContrasenia" Placeholder="Contraseña" IsPassword="true"></Entry>
            <Button x:Name="btnIniciar" Text="Iniciar sesión" Clicked="btnIniciar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>