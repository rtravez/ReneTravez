<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReneTravez.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Semana 3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"></Entry>
            <Entry x:Name="txtContrasenia" Placeholder="Contraseña" IsPassword="true"></Entry>
            <Button x:Name="btnIniciar" Text="Iniciar sesión" Clicked="btnIniciar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>